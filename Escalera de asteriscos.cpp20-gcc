#include <iostream>
using namespace std;
int main() {
    
    int N;
    cout << "Ingrese un nÃºmero entero N: ";
    cin >> N;

    if (N < 1 || N > 15) {
        cout << "Error: N debe estar en el rango [1, 15]." << endl;
        return 1;
    }

    for (int i = 1; i <= N; i++) {
        for (int j = 1; j <= N - i; j++) {
            cout << " ";
        }

        for (int k = 1; k <= i; k++) {
            cout << "#";
        }

        cout << endl;
    }

    return 0;
}